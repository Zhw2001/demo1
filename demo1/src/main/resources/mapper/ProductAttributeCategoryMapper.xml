<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ljsh.test.mbg.mapper.ProductAttributeCategoryMapper">

    <sql id="table">product_attribute_category</sql>

    <resultMap id="productAC" type="com.ljsh.test.mbg.model.ProductAttributeCategory">
        <result property="id" column="id"/>
        <result property="name" column="name" />
        <result property="attribute_count" column="attribute_count" />
        <result property="param_count" column="param_count" />
    </resultMap>

    <select id="getAll" resultMap="productAC">
        SELECT
        *
        FROM
        <include refid="table" />
    </select>

    <select id="getAllById" parameterType="Long" resultMap="productAC">
        SELECT
        *
        FROM
        <include refid="table" />
        WHERE id=#{id}
    </select>

    <select id="getNameById" parameterType="Long" resultType="String">
        SELECT
        name
        FROM
        <include refid="table" />
        WHERE id=#{id}
    </select>

    <select id="getAllName"  resultType="String">
        SELECT
        name
        FROM
        <include refid="table" />
    </select>

    <select id="getAllId"  resultType="Long">
        SELECT
        id
        FROM
        <include refid="table" />
    </select>

</mapper>